<h3>Listando Administradores</h3>

<div class="container">
  <table class="table table-striped  table-hover ">
    <thead class="thead-dark">

    <tr scope="row">
      <th>ID</th>
      <th>Email</th>
      <th>  <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle btn-sm" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td style="width: 150px">
          <%= link_to edit_admins_backoffice_admin_path(admin) do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_admins_path(admin),:method => :delete,  class: "btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir?" } do %>
            <i class="fa fa-minus"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="text-center" >
    <%= paginate @admins %>
  </div>

</div>